<?xml version="1.0"?>
<!--
/**
 * Совместим три последних задания в один общий модуль - События/Мероприятия нашего магазина
 */
-->
<config>
    <modules>
        <Hmtest_Axevents>
            <version>1.0.0</version>
        </Hmtest_Axevents>
    </modules>

    <global>
        <models>
            <axevents>
                <class>Hmtest_Axevents_Model</class>
                <resourceModel>axevents_resource</resourceModel>
            </axevents>
            <axevents_resource>
                <class>Hmtest_Axevents_Resource</class>
                <entities>
                    <axevent>
                        <table>ax_events</table>
                    </axevent>
                </entities>
            </axevents_resource>

            <helpers>
                <axevents>
                    <class>Hmtest_Axevents_Helper</class>
                </axevents>
            </helpers>
        </models>

        <resources>
            <axevents_setup>
                <setup>
                    <module>Hmtest_Axevents</module>
                </setup>
            </axevents_setup>
        </resources>
    </global>


    <frontend>
        <routers>
            <axevents>
                <use>standard</use>
                <args>
                    <module>Hmtest_Axevents</module>
                    <frontName>axevents</frontName>
                </args>
            </axevents>
        </routers>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <axevents before="Mage_Adminhtml">Hmtest_Axevents_Adminhtml</axevents>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>