<?xml version="1.0"?>
<!--
/**
 * Совместим три последних задания в один общий модуль - События/Мероприятия нашего магазина
 */
-->
<config>
    <modules>
        <Hmtest_Axevents>
            <version>1.0.0</version>
        </Hmtest_Axevents>
    </modules>

    <global>

        <blocks>
            <axevents>
                <class>Hmtest_Axevents_Block</class>
            </axevents>
        </blocks>

        <models>
            <axevents>
                <class>Hmtest_Axevents_Model</class>
                <resourceModel>axevents_resource</resourceModel>
            </axevents>
            <axevents_resource>
                <class>Hmtest_Axevents_Model_Resource</class>
                <entities>
                    <axevent>
                        <table>ax_events</table>
                    </axevent>
                </entities>
            </axevents_resource>
        </models>

        <helpers>
            <axevents>
                <class>Hmtest_Axevents_Helper</class>
            </axevents>
        </helpers>

        <resources>
            <axevents_setup>
                <setup>
                    <module>Hmtest_Axevents</module>
                </setup>
            </axevents_setup>
        </resources>
    </global>


    <frontend>
        <routers>
            <axevents>
                <use>standard</use>
                <args>
                    <module>Hmtest_Axevents</module>
                    <frontName>axevents</frontName>
                </args>
            </axevents>
        </routers>

        <layout>
            <updates>
                <axevents module="axevents">
                    <file>axevents.xml</file>
                </axevents>
            </updates>
        </layout>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <axevents before="Mage_Adminhtml">Hmtest_Axevents_Adminhtml</axevents>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <defalut>
        <axevents>
            <settings>
                <enabled>1</enabled>
                <events_count>10</events_count>
            </settings>
        </axevents>
    </defalut>

</config>